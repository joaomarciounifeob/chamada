<!-- views/chamada/select.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Fazer Chamada | Escolinha Dominical</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>
</head>

<body class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-100 flex flex-col">
  <!-- Navbar (partial) -->
  <%- include('../partials/navbar')%>

    <!-- Header -->
    <header class="py-6 px-4 bg-orange-600 shadow-md">
      <div class="container mx-auto text-center">
        <h1 class="text-3xl font-bold text-white">Fazer Chamada</h1>
        <p class="text-orange-200">Selecione a Turma e a Data</p>
      </div>
    </header>

    <main class="flex-grow container mx-auto px-4 py-8">
      <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg p-6">
        <form action="/chamada" method="POST" class="space-y-6">
          <!-- Dropdown de Turmas -->
          <div>
            <label for="turmaId" class="block text-gray-700 font-medium mb-1">Turma</label>
            <select id="turmaId" name="turmaId" required
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-300">
              <option value="" disabled selected>-- Selecione a Turma --</option>
              <% turmas.forEach(t=> { %>
                <option value="<%= t.id %>">
                  <%= t.nome %>
                </option>
                <% }); %>
            </select>
          </div>

          <!-- Campo Data -->
          <div>
            <label for="dataChamada" class="block text-gray-700 font-medium mb-1">Data da Chamada</label>
            <input type="date" id="dataChamada" name="dataChamada" required
              value="<%= new Date().toISOString().slice(0, 10) %>"
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-300" />
          </div>

          <!-- Botões -->
          <div class="flex justify-between items-center">
            <a href="/"
              class="inline-flex items-center px-4 py-2 bg-gray-400 text-white rounded-lg hover:bg-gray-500 transition-colors">
              <i data-lucide="arrow-left" class="w-5 h-5 mr-2"></i>
              Voltar
            </a>
            <button type="submit"
              class="inline-flex items-center px-4 py-2 bg-orange-600 text-white rounded-lg hover:bg-orange-700 transition-colors">
              <i data-lucide="chevrons-right" class="w-5 h-5 mr-2"></i>
              Avançar
            </button>
          </div>
        </form>
      </div>
    </main>

    <footer class="bg-gray-200 text-center py-4">
      <p class="text-sm">&copy; 2025 Escolinha Dominical</p>
    </footer>

    <script>
      lucide.createIcons();
    </script>
</body>

</html>